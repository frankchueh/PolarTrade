<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wallet_holo_blue_light"
    android:orientation="vertical"
    tools:context="com.example.project_ver1.mainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dip"
        android:layout_weight="0.50"
        android:backgroundTint="@color/wallet_holo_blue_light"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnProductUpload"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="70dip"
                android:background="@drawable/product_upload" />

            <Button
                android:id="@+id/btnUserInfo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/user_info" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnProductManage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="-5dip"
                android:background="@drawable/product_manage" />

            <Button
                android:id="@+id/btnShoppingCart"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/shop_cart" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_gravity="bottom"
        android:layout_weight="0.36"
        android:background="@drawable/clash_ice" >

        <Button
            android:id="@+id/btnSearchProduct"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:background="@drawable/search" />

        <Button
            android:id="@+id/btnChatroomList"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:background="@drawable/chat" />

        <Button
            android:id="@+id/btnStartService"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:background="@drawable/location_off" />

        <Button
            android:id="@+id/btnQuitService"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:background="@drawable/map_location" />

    </LinearLayout>

</LinearLayout>