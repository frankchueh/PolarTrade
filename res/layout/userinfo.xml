<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:orientation="vertical" 
    android:background="@color/wallet_holo_blue_light">

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.11"
        android:orientation="vertical"
        android:paddingTop="20dp" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imgUIMPhoto"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_photo" />

                <TextView
                    android:id="@+id/txtUserAccountLabel"
                    style="@style/TitleTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dip"
                    android:layout_marginTop="30dip"
                    android:text="帳戶名稱"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtUserAccount"
                    style="@style/ContextTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dip"
                    android:text="TextView"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtUserNameLabel"
                    style="@style/TitleTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dip"
                    android:text="姓名"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="30dip"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtUserAgeLabel"
                    style="@style/TitleTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dip"
                    android:text="年齡"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtUserAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="30dip"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtUserBirthLabel"
                    style="@style/TitleTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dip"
                    android:text="出生年月日"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtUserBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="30dip"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtUserGenderLabel"
                    style="@style/TitleTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dip"
                    android:text="性別"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtUserGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="30dip"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtUserMobileLabel"
                    style="@style/TitleTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dip"
                    android:text="手機號碼"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtUserMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="30dip"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtUserEmailLabel"
                    style="@style/TitleTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dip"
                    android:text="Email"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtUserEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="30dip"
                    android:textSize="15sp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/btnUserinfoEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="編輯" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

    </LinearLayout>

    <Button
        android:id="@+id/btnUIMComfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="返回" />

</LinearLayout>