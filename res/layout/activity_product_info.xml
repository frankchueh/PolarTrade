<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" 
    android:background="@color/wallet_holo_blue_light">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="450dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/productInfo_NameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="商品名稱 :"/>

            <TextView
                android:id="@+id/productInfo_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/productInfo_PriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="商品價格 :"/>

            <TextView
                android:id="@+id/productInfo_Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/productInfo_PhotoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:textColor="#FFFFFF"
                android:text="商品快照 :" />

            <ImageView
                android:id="@+id/productInfo_Photo"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="#FFFFFF"
                android:src="@drawable/placeholder" />

            <TextView
                android:id="@+id/productInfo_InfoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="商品詳述  :" />

            <EditText
                android:id="@+id/productInfo_Info"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:editable="false"
                android:background="#FFFFFF"
                android:ems="10"
                android:scrollbars="vertical"
                android:singleLine="false" />

            <LinearLayout
                android:id="@+id/sellerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/productInfo_editButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="編輯" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buyerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.67" >

                <Button
                    android:id="@+id/btnChat"
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:text="議價面交" />

                <Button
                    android:id="@+id/btnSaveProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="放入購物車" />
            </LinearLayout>

        </LinearLayout>
		</ScrollView>

</LinearLayout>